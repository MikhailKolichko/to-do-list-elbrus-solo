<form name="edit-party-form" method="POST" action="/party/update/{{party.id}}">
    <div class="form-group">
      <label for="formGroupExampleInput">Место:</label>
      <input name="location" type="text" class="form-control" id="formGroupExampleInput" value="{{party.location}}">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Детали</label>
      <textarea name="details" class="form-control" id="" cols="30" rows="2" >{{party.details}}</textarea>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput">Дата:</label>
      <input name="date" type="datetime-local" class="form-control" id="formGroupExampleInput" placeholder="2019-05-22 12:00" value="{{party.date}}">
    </div>
    <p><input type="submit" class="btn btn-primary"></p>
    <div class="updateContainer">
    </div>
  </form>